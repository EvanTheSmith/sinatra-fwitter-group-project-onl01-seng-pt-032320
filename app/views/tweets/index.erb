<p>Welcome, <%= current_user.username %></p>

<p> Here are all tweets on Fwitter </p>

<% @users.each do |user| %>
 <% if !user.tweets.all.empty? %>
  <h4><%= user.username %></h4>

  <% tweets = Tweet.all.select {|tweet| tweet.user == user} %>
  <ul>
  <% tweets.each do |tweet| %>
    <li><%= tweet.content %></li>
    <% end %>
  </ul>
 <% end %>
<% end %>

<p><a href="/logout">Log Out</a></p>